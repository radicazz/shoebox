#!/usr/bin/env bash
set -euo pipefail

echo "ðŸ§¹ Cleaning build artifacts..."

rm -rf dist/ .astro/
echo "  âœ“ Removed dist/ and .astro/"

if [ -d node_modules ]; then
  rm -rf node_modules/
  echo "  âœ“ Removed node_modules/"
fi

if command -v pnpm >/dev/null 2>&1; then
  REINSTALL_CMD="pnpm install"
else
  REINSTALL_CMD="npm install"
fi

echo ""
echo "âœ… Clean complete!"
echo "ðŸ’¡ Run '$REINSTALL_CMD' to reinstall dependencies"
