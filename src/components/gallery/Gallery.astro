---
import GalleryItem from './GalleryItem.astro';
import type { GalleryItemData } from './GalleryItem.astro';

export interface Props {
  title?: string;
  description?: string;
  items: GalleryItemData[];
}

const { title = 'Gallery', description, items = [] } = Astro.props as Props;
---

{items.length > 0 && (
  <section class="gallery-section" aria-label={title} data-gallery-reveal>
    <div class="gallery-masonry">
      {items.map((item) => (
        <GalleryItem item={item} />
      ))}
    </div>

  </section>
)}

<script is:inline>
  (() => {
    if (typeof window === 'undefined') return;

    // Display gallery immediately on load while keeping the reveal animation
    const gallery = document.querySelector('[data-gallery-reveal]');
    if (!gallery) return;

    window.requestAnimationFrame(() => {
      gallery.classList.add('gallery-revealed');
    });

    const updateThemedImages = (theme) => {
      const isDark = theme === 'dark';
      const images = document.querySelectorAll('[data-theme-image]');
      images.forEach((node) => {
        const img = node instanceof HTMLImageElement ? node : null;
        if (!img) return;
        const preferred = img.getAttribute(isDark ? 'data-theme-src-dark' : 'data-theme-src-light');
        const fallback = img.getAttribute(isDark ? 'data-theme-src-light' : 'data-theme-src-dark');
        const next = preferred || fallback;
        if (next && img.getAttribute('src') !== next) {
          img.setAttribute('src', next);
        }
      });
    };

    const applyCurrentTheme = () => {
      const currentTheme = document.documentElement.dataset.theme || 'light';
      updateThemedImages(currentTheme);
    };

    applyCurrentTheme();
    document.addEventListener('shoebox-theme-change', (event) => {
      const nextTheme = event.detail?.theme;
      if (nextTheme) updateThemedImages(nextTheme);
    });
  })();
</script>

<style>
  .gallery-section {
    opacity: 0;
    transform: translateY(2rem);
    transition: opacity 600ms ease, transform 600ms ease;
  }

  .gallery-section.gallery-revealed {
    opacity: 1;
    transform: translateY(0);
  }

  /* Masonry layout using CSS columns */
  .gallery-masonry {
    column-count: 1;
    column-gap: 1.5rem;
  }

  @media (min-width: 640px) {
    .gallery-masonry {
      column-count: 2;
    }
  }

  @media (min-width: 1024px) {
    .gallery-masonry {
      column-count: 3;
    }
  }

  /* Ensure items flow nicely in the masonry layout */
  .gallery-masonry > :global(*) {
    margin-bottom: 1.5rem;
    break-inside: avoid;
  }

  /* Stagger animation for gallery items */
  .gallery-revealed .gallery-masonry > :global(*) {
    animation: fadeInUp 400ms ease forwards;
    opacity: 0;
  }

  .gallery-revealed .gallery-masonry > :global(*:nth-child(1)) {
    animation-delay: 100ms;
  }

  .gallery-revealed .gallery-masonry > :global(*:nth-child(2)) {
    animation-delay: 150ms;
  }

  .gallery-revealed .gallery-masonry > :global(*:nth-child(3)) {
    animation-delay: 200ms;
  }

  .gallery-revealed .gallery-masonry > :global(*:nth-child(4)) {
    animation-delay: 250ms;
  }

  .gallery-revealed .gallery-masonry > :global(*:nth-child(5)) {
    animation-delay: 300ms;
  }

  .gallery-revealed .gallery-masonry > :global(*:nth-child(6)) {
    animation-delay: 350ms;
  }

  .gallery-revealed .gallery-masonry > :global(*:nth-child(n+7)) {
    animation-delay: 400ms;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(1rem);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
