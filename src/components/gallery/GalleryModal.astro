---
// Modal component - rendered once and controlled via JavaScript
---

<div
  id="gallery-modal"
  class="gallery-modal fixed inset-0 z-50 hidden items-center justify-center bg-black/70 backdrop-blur-lg p-4 dark:bg-black/80"
  role="dialog"
  aria-modal="true"
  aria-labelledby="modal-title"
  data-gallery-modal
>
  <div class="gallery-modal-container theme-panel relative my-auto max-h-[90vh] w-full max-w-4xl overflow-hidden rounded-2xl p-0">
    <!-- Scrollable content wrapper -->
    <div class="gallery-modal-scroll-container overflow-y-auto max-h-[90vh]">
      <!-- Close button - fixed position so it stays visible during scroll -->
      <button
        type="button"
        data-gallery-modal-close
        class="gallery-modal-close-btn sticky top-4 left-full ml-auto mr-4 mt-4 z-20 flex h-10 w-10 items-center justify-center rounded-full bg-black/50 text-white transition-all hover:bg-black/70 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-white dark:bg-white/10 dark:hover:bg-white/20"
        aria-label="Close modal"
      >
        <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>

      <!-- Modal content - dynamically populated -->
      <div id="gallery-modal-content" class="gallery-modal-content">
        <!-- Content injected via JavaScript -->
      </div>
    </div>
  </div>
</div>

<style>
  .gallery-modal {
    animation: fadeIn 200ms ease;
    background-color: rgba(2, 6, 23, 0.85);
    backdrop-filter: blur(24px) saturate(140%);
    -webkit-backdrop-filter: blur(24px) saturate(140%);
    isolation: isolate;
    overscroll-behavior: contain;
    /* Ensure modal is always positioned from viewport top, not document top */
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
  }

  .gallery-modal::before {
    content: '';
    position: absolute;
    inset: 0;
    background: radial-gradient(circle at 18% 25%, rgba(147, 197, 253, 0.35), transparent 55%),
      radial-gradient(circle at 80% 0%, rgba(59, 130, 246, 0.3), transparent 60%),
      linear-gradient(180deg, rgba(2, 6, 23, 0.75), rgba(2, 6, 23, 0.92));
    opacity: 0.95;
    pointer-events: none;
    z-index: 0;
  }

  .gallery-modal > * {
    position: relative;
    z-index: 1;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  .gallery-modal-container {
    animation: slideUp 300ms ease;
    box-shadow: 0 25px 80px rgba(0, 0, 0, 0.5);
    display: flex;
    flex-direction: column;
  }

  @keyframes slideUp {
    from {
      opacity: 0;
      transform: translateY(2rem) scale(0.95);
    }
    to {
      opacity: 1;
      transform: translateY(0) scale(1);
    }
  }

  /* Smooth scrolling for modal content */
  .gallery-modal-scroll-container {
    scroll-behavior: smooth;
    overscroll-behavior: contain;
    -webkit-overflow-scrolling: touch; /* iOS momentum scrolling */
  }

  /* Custom scrollbar styling */
  .gallery-modal-scroll-container::-webkit-scrollbar {
    width: 8px;
  }

  .gallery-modal-scroll-container::-webkit-scrollbar-track {
    background: rgba(0, 0, 0, 0.1);
    border-radius: 10px;
  }

  .gallery-modal-scroll-container::-webkit-scrollbar-thumb {
    background: rgba(100, 100, 100, 0.5);
    border-radius: 10px;
  }

  .gallery-modal-scroll-container::-webkit-scrollbar-thumb:hover {
    background: rgba(100, 100, 100, 0.7);
  }

  /* Close button positioning */
  .gallery-modal-close-btn {
    float: right;
    shape-outside: circle(50%);
  }

  .gallery-modal.hidden {
    display: none;
  }

  .gallery-modal:not(.hidden) {
    display: flex;
  }

  /* Prevent body scroll when modal is open and prevent layout shift */
  body:has(.gallery-modal:not(.hidden)) {
    overflow: hidden;
    padding-right: var(--scrollbar-width, 0px);
  }

  /* Blur the entire page content when modal is open */
  body.modal-open > *:not(.gallery-modal) {
    filter: blur(8px);
    transition: filter 200ms ease;
  }

  body:not(.modal-open) > * {
    filter: blur(0);
    transition: filter 200ms ease;
  }
</style>

<script is:inline>
  (() => {
    if (typeof window === 'undefined') return;

    // Store gallery data globally for modal access
    window.__galleryData = window.__galleryData || {};

    const modal = document.querySelector('[data-gallery-modal]');
    const modalContent = document.getElementById('gallery-modal-content');
    const closeBtn = document.querySelector('[data-gallery-modal-close]');
    const scrollContainer = document.querySelector('.gallery-modal-scroll-container');

    if (!modal || !modalContent || !closeBtn || !scrollContainer) return;

    // Calculate scrollbar width to prevent layout shift
    const getScrollbarWidth = () => {
      const outer = document.createElement('div');
      outer.style.visibility = 'hidden';
      outer.style.overflow = 'scroll';
      document.body.appendChild(outer);
      const inner = document.createElement('div');
      outer.appendChild(inner);
      const scrollbarWidth = outer.offsetWidth - inner.offsetWidth;
      outer.parentNode.removeChild(outer);
      return scrollbarWidth;
    };

    const openModal = (itemId) => {
      const itemData = window.__galleryData[itemId];
      if (!itemData) {
        console.warn('Gallery item not found:', itemId);
        return;
      }

      // Store scrollbar width to prevent layout shift
      const scrollbarWidth = getScrollbarWidth();
      document.documentElement.style.setProperty('--scrollbar-width', `${scrollbarWidth}px`);

      // Build modal content
      const hasImages = itemData.details.images && itemData.details.images.length > 0;
      const hasTech = itemData.details.tech && itemData.details.tech.length > 0;
      const hasLink = itemData.details.link && itemData.details.link.trim() !== '';

      let imagesHTML = '';
      if (hasImages) {
        imagesHTML = `
          <div class="gallery-modal-images grid gap-4 mb-6 ${itemData.details.images.length > 1 ? 'grid-cols-1 sm:grid-cols-2' : 'grid-cols-1'}">
            ${itemData.details.images.map(img => `
              <img 
                src="${img}" 
                alt="${itemData.title}" 
                class="w-full h-auto rounded-lg object-cover"
                loading="lazy"
              />
            `).join('')}
          </div>
        `;
      }

      let techHTML = '';
      if (hasTech) {
        techHTML = `
          <div class="mb-6">
            <h3 class="theme-heading text-sm font-semibold uppercase tracking-wide mb-3">Technologies</h3>
            <div class="flex flex-wrap gap-2">
              ${itemData.details.tech.map(tech => `
                <span class="theme-chip px-3 py-1.5 text-sm font-medium">${tech}</span>
              `).join('')}
            </div>
          </div>
        `;
      }

      let linkHTML = '';
      if (hasLink) {
        linkHTML = `
          <div class="pt-4 border-t border-gray-200 dark:border-gray-700">
            <a 
              href="${itemData.details.link}" 
              target="_blank" 
              rel="noopener noreferrer"
              class="theme-accent-link inline-flex items-center gap-2 text-base font-semibold"
            >
              View Project
              <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
              </svg>
            </a>
          </div>
        `;
      }

      modalContent.innerHTML = `
        ${imagesHTML}
        <div class="${hasImages ? 'px-6 pb-6' : 'p-6'}">
          <div class="mb-4">
            <h2 id="modal-title" class="theme-heading text-3xl font-bold mb-2">${itemData.title}</h2>
            ${itemData.details.date ? `<p class="theme-text-muted text-sm">${itemData.details.date}</p>` : ''}
          </div>
          
          ${itemData.tags && itemData.tags.length > 0 ? `
            <div class="flex flex-wrap gap-2 mb-6">
              ${itemData.tags.map(tag => `
                <span class="theme-chip px-2.5 py-1 text-xs font-medium">${tag}</span>
              `).join('')}
            </div>
          ` : ''}
          
          <div class="mb-6">
            <p class="text-base leading-relaxed">${itemData.details.fullDescription}</p>
          </div>
          
          ${techHTML}
          ${linkHTML}
        </div>
      `;

      modal.classList.remove('hidden');
      
      // Add class to body to trigger page blur
      document.body.classList.add('modal-open');
      
      // Scroll page to top to ensure modal appears in center of viewport
      window.scrollTo({ top: 0, behavior: 'smooth' });
      
      // Reset modal internal scroll position to top
      scrollContainer.scrollTop = 0;
      
      // Focus modal for keyboard navigation after a brief delay to allow scroll
      setTimeout(() => {
        modal.focus();
      }, 100);
    };

    const closeModal = () => {
      modal.classList.add('hidden');
      modalContent.innerHTML = '';
      
      // Remove modal-open class to remove page blur
      document.body.classList.remove('modal-open');
      
      // Remove scrollbar width compensation
      document.documentElement.style.removeProperty('--scrollbar-width');
    };

    // Event listeners
    closeBtn.addEventListener('click', closeModal);
    
    modal.addEventListener('click', (e) => {
      if (e.target === modal) {
        closeModal();
      }
    });

    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && !modal.classList.contains('hidden')) {
        closeModal();
      }
    });

    // Listen for gallery item clicks
    document.addEventListener('click', (e) => {
      const galleryItem = e.target.closest('[data-gallery-item-id]');
      if (galleryItem) {
        const itemId = galleryItem.getAttribute('data-gallery-item-id');
        openModal(itemId);
      }
    });

    // Keyboard support for gallery items
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Enter' || e.key === ' ') {
        const galleryItem = e.target.closest('[data-gallery-item-id]');
        if (galleryItem) {
          e.preventDefault();
          const itemId = galleryItem.getAttribute('data-gallery-item-id');
          openModal(itemId);
        }
      }
    });
  })();
</script>