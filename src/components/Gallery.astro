---
import GalleryItem, { type GalleryItemData } from './GalleryItem.astro';
export interface Props {
  items: GalleryItemData[];
  title?: string;
  description?: string;
}
const { items = [], title = 'Gallery', description } = Astro.props as Props;
---
<section class="py-16" aria-labelledby="gallery-heading">
  <div class="text-center">
    <p class="text-sm uppercase tracking-[0.2em] text-gray-500 dark:text-gray-400">Board</p>
    <h2 id="gallery-heading" class="mt-2 text-3xl font-bold text-gray-900 dark:text-gray-50">{title}</h2>
    {description && <p class="mt-3 text-lg text-gray-600 dark:text-gray-300">{description}</p>}
  </div>
  <div class="mt-12 columns-1 gap-6 space-y-6 sm:columns-2 lg:columns-3" role="list">
    {items.map((item) => (
      <div role="listitem" class="break-inside-avoid">
        <GalleryItem item={item} />
      </div>
    ))}
  </div>
</section>
