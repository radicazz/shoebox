---
export interface GalleryItemData {
  id: string;
  thumbnail: string;
  fullImage?: string;
  title: string;
  description?: string;
  tags?: string[];
  date?: string;
}
export interface Props {
  item: GalleryItemData;
}
const { item } = Astro.props as Props;
const isExternal = /^(?:[a-z]+:)?\/\//i;
const normalizedBase = (import.meta.env.BASE_URL ?? '/').replace(/\/$/, '');
const resolvePath = (path: string) => {
  if (!path) return '';
  if (isExternal.test(path)) return path;
  const normalized = path.replace(/^\//, '');
  return `${normalizedBase ? normalizedBase : ''}/${normalized}`;
};
const formattedDate = item.date ? new Date(item.date).toLocaleDateString(undefined, { month: 'short', year: 'numeric' }) : '';
---
<article class="group relative block" aria-labelledby={`gallery-item-${item.id}`}>
  <div class="overflow-hidden rounded-3xl bg-white shadow-sm ring-1 ring-gray-200 transition duration-300 hover:-translate-y-1 hover:shadow-xl dark:bg-gray-800 dark:ring-gray-700">
    <div class="relative">
      <img src={resolvePath(item.thumbnail)} alt={item.title} loading="lazy" decoding="async" class="max-h-[420px] w-full object-cover transition duration-500 group-hover:scale-105" />
      <div class="pointer-events-none absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent opacity-0 transition group-hover:opacity-100" aria-hidden="true"></div>
    </div>
    <div class="space-y-3 px-5 py-4 text-left">
      <h3 id={`gallery-item-${item.id}`} class="text-lg font-semibold text-gray-900 dark:text-gray-50">{item.title}</h3>
      {item.description && <p class="text-sm text-gray-600 dark:text-gray-300 line-clamp-2">{item.description}</p>}
      <div class="flex flex-wrap gap-2">
        {item.tags?.map((tag) => (
          <span class="rounded-full bg-gray-100 px-3 py-1 text-xs font-medium text-gray-700 transition-colors group-hover:bg-gray-900 group-hover:text-white dark:bg-gray-700 dark:text-gray-100" aria-label={`Tag ${tag}`}>{tag}</span>
        ))}
      </div>
      {formattedDate && <p class="text-xs uppercase tracking-wide text-gray-400">{formattedDate}</p>}
    </div>
  </div>
</article>
